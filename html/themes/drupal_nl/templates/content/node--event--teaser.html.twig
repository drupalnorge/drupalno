  <div class="card__img">
    {{ content.field_image }}
  </div>

  <div class="card__content">
    {{ title_prefix }}
    {% if not page %}
      <h2{{ title_attributes }}>
        <a href="{{ url }}" rel="bookmark">{{ label }}</a>
      </h2>
    {% endif %}
    
    {{ title_suffix }}

    <div{{ content_attributes }}>
      {{ content|without('field_image') }}
    </div>
  </div>