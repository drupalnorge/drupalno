{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal/admin_toolbar": "^2.0",
        "drupal/better_exposed_filters": "^4.0@beta",
        "drupal/cer": "^4.0@alpha",
        "drupal/coffee": "^1.0",
        "drupal/config_ignore": "^2.1",
        "drupal/config_split": "^1.0",
        "drupal/console": "^1.0.2",
        "drupal/contact_ajax": "^1.4@RC",
        "drupal/contact_block": "^1.4",
        "drupal/core-composer-scaffold": "^8.9.1",
        "drupal/core-recommended": "^8.9.1",
        "drupal/ds": "^3.1",
        "drupal/entity_browser": "^2.1.0",
        "drupal/field_group": "^3.1",
        "drupal/google_analytics": "^3.0",
        "drupal/honeypot": "^2.0",
        "drupal/image_effects": "^3.0",
        "drupal/inline_entity_form": "^1.0@beta",
        "drupal/menu_block": "^1.5",
        "drupal/menu_link_attributes": "^1.0@beta",
        "drupal/metatag": "^1.9",
        "drupal/page_manager": "^4.0@beta",
        "drupal/panels": "^4.2",
        "drupal/paragraphs_jquery_ui_accordion": "^1.2",
        "drupal/pathauto": "^1.6",
        "drupal/rabbit_hole": "^1.0@beta",
        "drupal/recaptcha": "^3.0",
        "drupal/redirect": "^1.0@beta",
        "drupal/reroute_email": "^1.1",
        "drupal/seckit": "^1.0@alpha",
        "drupal/simple_sitemap": "^3.0",
        "drupal/site_verify": "1.x-dev",
        "drupal/smtp": "^1.0@beta",
        "drupal/webform": "^5.12",
        "drush/drush": "^9.0.0",
        "zaporylie/composer-drupal-optimizations": "^1.1"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0",
        "drupal/core-dev": "^8.9.1",
        "drupal/devel": "^2.1",
        "drupal/drupal-extension": "~4.0",
        "drupal/stage_file_proxy": "^1.0",
        "drupal/upgrade_status": "^2.9",
        "eiriksm/wait-for-listen": "^1.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.1.17"
        }
    },
    "scripts": {
        "import": [
            "./vendor/bin/drush --root=$(pwd)/web cc drush",
            "./vendor/bin/drush --root=$(pwd)/web cim -y",
            "./vendor/bin/drush cr"
        ],
        "export": [
            "./vendor/bin/drush --root=$(pwd)/web cex -y",
            "./vendor/bin/drush cr"
        ],
        "pre-build": [
            "git pull"
        ],
        "after-build": [
            "./vendor/bin/drush --root=$(pwd)/web updb -y",
            "@composer import",
            "./vendor/bin/drush --root=$(pwd)/web cr"
        ],
        "build": [
            "@composer pre-build",
            "@composer install --no-dev --optimize-autoloader",
            "@composer after-build"
        ],
        "build-dev": [
            "@composer pre-build",
            "@composer install",
            "@composer after-build"
        ],
        "dl-db": [
            "wget --no-check-certificate http://dev.drupal.no/sanitized.db"
        ],
        "up-db": [
            "./vendor/bin/drush sql-drop --yes",
            "wget --no-check-certificate http://dev.drupal.no/sanitized.db",
            "./vendor/bin/drush sql-cli < ./sanitized.db",
            "rm ./sanitized.db",
            "./vendor/bin/drush cr"
        ],
        "install-site": [
            "@composer install",
            "@composer up-db"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/robots.txt": false
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {
            "drupal/core": {
                "Keep setting.php intact, add local config to settings.local.php": "https://github.com/zaporylie/drupal/commit/6f0b4e95f28ae945c6fa2bf0e5e81850d3e695f8.patch"
            },
            "drupal/ds": {
                "#2904575 - Fix layout warning (https://www.drupal.org/project/ds/issues/2904575)": "https://www.drupal.org/files/issues/invalid_argument_in_ds_module-2904575-2.patch"
            }
        }
    }
}
